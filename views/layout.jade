        block style

        block page
            -var selected = 'home'
        -var menu = {'Home':'/', 'About':'/about', 'News':'/news', 'Forum':'/forum', 'Database':'/database', 'Resources':'/resources'}


    body#page-top(data-spy='scroll', data-target='.navbar-fixed-top')
        nav#menu.navbar.navbar-default.navbar-fixed-top
            .container
                // Brand and toggle get grouped for better mobile display
                .navbar-header
                    button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1')
                        span.sr-only Toggle navigation
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                    a.navbar-brand.page-scroll(href='/') National Sobering Collaborative
                // Collect the nav links, forms, and other content for toggling
                    //add style here
                #bs-example-navbar-collapse-1.collapse.navbar-collapse
                    if (username)
                        ul.nav.navbar-nav.navbar-right
                            li.dropdown
                                a(href="#", class="dropdown-toggle" data-toggle="dropdown"  )=username
                                    span.caret
                                ul.dropdown-menu
                                    li
                                        a(href="/accounts/logout") Sign out
                    else
                        div.navbar-form.navbar-right
                            a.btn.btn-custom.btn-lg.page-scroll.login-button(href='/accounts/login') Login
                    ul.nav.navbar-nav.navbar-right
                        each val, key in menu
                            if selected === key
                                li.active
                                    a(href=val)=key
                            else
                                li
                                    a(href=val)=key

        block content
        #footer
            .container.text-center
                .col-md-4
                .col-md-4
                    h3 Contact Info
                    .contact-item
                        p nationalsobering@gmail.com
                .col-md-4
            .container-fluid.text-center.copyrights
                .col-md-8.col-md-offset-2
                    .social
                        ul
                            li
                                a(href='https://twitter.com/intent/follow?original_referer=http%3A%2F%2Fwww.nationalsobering.org%2Fmap-and-links.html&ref_src=twsrc%5Etfw&region=follow_link&screen_name=NationalSober&tw_p=followbutton') Follow Us
                                    i.fa.fa-twitter
                    p.
                        &copy; 2017 National Sobering Collaborative

